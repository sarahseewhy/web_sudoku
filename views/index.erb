  <html>
  <head>
  	<title>Sudoku Game</title>
  	<!-- link to the CSS stylesheet -->
  	<link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
  </head>
  <body>
  <h1> Synchronized Saltant Sudoku </h1>
  <div id="sudoku">
  	<!-- one div for each row -->
  	<% 3.times do |row| %>
  		<div class='row'>
  				<!-- we want to create separate div elements for boxes to style them using CSS -->
  			<% 3.times do |box| %>
  					<div class="box">
  				<!-- each box will have nine cells -->
  				<% 3.times do |cell_row| %>
  						<div class="cell-row">
  					<% 3.times do |cell| %>
  							<div class="cell">
  								<!-- every cell will have an input field -->
                  <% cell_index = row * 27 + box * 3 + cell_row * 9 + cell %>
                  <% cell_value = @current_solution[cell_index] %>
  								<input type="text" maxlength="1" autocomplete="off" value="<%= cell_value %>">
  							</div>
  						<% end %>
  					</div>
  				<% end %>
  			</div>
  		<% end %>
  	</div>
  <% end %>
 </div>
</body>
</html> 
